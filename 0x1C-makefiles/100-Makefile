# target compiles all files
# cleans

CC = gcc
SRC = school.c main.c
OBJ = $(patsubst %.c, %.o, $(SRC))
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: m.h $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) *.swp *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:clean oclean

re:fclean all
